<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>Edit Quote - Famous Quotes</title>
</head>
<body>
    <%- include('partials/nav') %>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h4><i class="bi bi-pencil-square"></i> Updating Quote</h4>
                    </div>
                    <div class="card-body p-4">
                        <form method="POST" action="/quote/edit">
                            <input type="hidden" name="quoteId" value="<%= quoteInfo[0].quoteId %>">

                            <div class="mb-3">
                                <label for="quote" class="form-label">Quote *</label>
                                <textarea class="form-control" id="quote" name="quote" rows="4" required><%= quoteInfo[0].quote %></textarea>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="authorId" class="form-label">Author *</label>
                                    <select class="form-select" id="authorId" name="authorId" required>
                                        <option value="">Select an author...</option>
                                        <% for (let author of authors) { %>
                                        <option value="<%= author.authorId %>" 
                                                <% if (author.authorId === quoteInfo[0].authorId) { %> selected <% } %>>
                                            <%= author.firstName %> <%= author.lastName %>
                                        </option>
                                        <% } %>
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="category" class="form-label">Category</label>
                                    <input type="text" class="form-control" id="category" name="category" 
                                           list="categoryList" value="<%= quoteInfo[0].category || '' %>">
                                    <datalist id="categoryList">
                                        <% for (let cat of categories) { %>
                                        <option value="<%= cat.category %>">
                                        <% } %>
                                    </datalist>
                                </div>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> Update Quote
                                </button>
                                <a href="/quotes" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>
</html>

