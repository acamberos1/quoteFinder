<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>All Authors - Famous Quotes</title>
</head>
<body>
    <%- include('partials/nav') %>

    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-people"></i> Updating & Deleting Authors</h2>
            <a href="/author/new" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New Author
            </a>
        </div>

        <% if (authors.length === 0) { %>
        <div class="alert alert-info">
            No authors found. Add some authors to get started.
        </div>
        <% } else { %>
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Actions</th>
                        <th>Name</th>
                        <th>Profession</th>
                        <th>Country</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let author of authors) { %>
                    <tr>
                        <td>
                            <a href="/author/edit?authorId=<%= author.authorId %>" class="btn btn-sm btn-outline-primary me-1">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a href="/author/delete?authorId=<%= author.authorId %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this author?')">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                        <td><%= author.firstName %> <%= author.lastName %></td>
                        <td><%= author.profession || '-' %></td>
                        <td><%= author.country || '-' %></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <% } %>

        <a href="/admin" class="btn btn-outline-secondary mt-3">
            <i class="bi bi-arrow-left"></i> Back to Admin
        </a>
    </div>

</body>
</html>